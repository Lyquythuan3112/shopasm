<!DOCTYPE html>
<html>
<head>
  <title>Category List</title>
  <!-- Add Bootstrap CSS link -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Category List</h1>
    <a href="/categories/create" class="btn btn-primary mb-3">Add Category</a>
    <table class="table">
      <thead>
        <tr>
          <th>Category ID</th>
          <th>Category Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(function(category) { %>
          <tr>
            <td><%= category.category_id %></td>
            <td><%= category.category_name %></td>
            <td>
              <a href="/categories/<%= category._id %>/edit" class="btn btn-primary">Edit</a>
              <form action="/categories/<%= category._id %>/delete" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <!-- Add Bootstrap JS script links -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</body>
</html>
