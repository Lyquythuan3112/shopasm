<!DOCTYPE html>
<html>
<head>
  <title>Index</title>
  <!-- Add Bootstrap CSS link -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding-top: 20px;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
      font-size: 36px;
    }

    .button-container {
      text-align: center;
      margin-bottom: 30px;
    }

    .product-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .product-card {
      flex: 0 0 300px;
      margin: 10px;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 5px;
      background-color: #fff;
      box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
      transition: box-shadow 0.3s ease;
    }

    .product-card:hover {
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    }

    .product-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
      margin-bottom: 20px;
      border-radius: 5px;
    }

    .product-name {
      font-weight: bold;
      margin-bottom: 10px;
      font-size: 18px;
    }

    .product-price {
      margin-bottom: 10px;
      font-size: 16px;
    }

    .product-description {
      margin-bottom: 20px;
      font-size: 14px;
    }

    .product-buttons {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .product-button {
      padding: 10px;
      background-color: #4CAF50;
      color: white;
      text-align: center;
      text-decoration: none;
      font-size: 16px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .product-button:hover {
      background-color: #45a049;
    }

    .buy-button {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      text-align: center;
      text-decoration: none;
      font-size: 16px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .buy-button:hover {
      background-color: #0056b3;
    }

    .search-form {
      text-align: center;
      margin-bottom: 20px;
    }

    .search-input {
      width: 300px;
      height: 40px;
      padding: 5px 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 16px;
    }

    .search-button {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      text-align: center;
      text-decoration: none;
      font-size: 16px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .search-button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Welcome to the ATN SHOP</h1>
    <div class="button-container">
      <button onclick="location.href='/categories'" class="btn btn-primary">Category</button>
      <button onclick="location.href='/products'" class="btn btn-primary">Product</button>
    </div>

    <div class="search-form">
      <form action="/products/search" method="GET">
        <input type="text" name="query" class="search-input" placeholder="Search products...">
        <button type="submit" class="search-button">Search</button>
      </form>
    </div>

    <div class="product-container">
      <% products.forEach(function(product) { %>
        <div class="product-card">
          <% if (product.product_image) { %>
            <img class="product-image" src="/images/<%= product.product_image %>">
          <% } else { %>
            <p>No Image Available</p>
          <% } %>
          <p class="product-name"><%= product.product_name %></p>
          <p class="product-price">$<%= product.product_price.toFixed(2) %></p>
          <p class="product-description"><%= product.product_description %></p>
          <div class="product-buttons">
            <button onclick="location.href='/products/<%= product._id %>'" class="product-button">View Details</button>
            <button onclick="alert('Added to Cart!')" class="buy-button">Buy</button>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Add Bootstrap JS script links -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</body>
</html>
